{
  "compilerOptions": {
    "target": "es6",
    "module": "CommonJS",
    "strict": false,
    "jsx": "react",
    "importHelpers": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "suppressImplicitAnyIndexErrors": true,
    "sourceMap": true,
    "locale": "en-US",
    "baseUrl": ".",
    "types": [
      "node"
    ],
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost",
      "es6"
    ],
  },
  "include": [
    "./global.d.ts",
    "../shared/**/*.ts",
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
